{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "pankreatitmed-front",
  "version": "0.1.0",
  "identifier": "com.pankreatitmed.app",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "VITE_BASE_PATH=/ npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "pankreatitmed-front",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      // CORS настройка для Tauri: отключаем CSP для разрешения HTTP-запросов к внешним API
      // В Tauri приложениях CORS не требуется, так как это десктопное приложение
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
